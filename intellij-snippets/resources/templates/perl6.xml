<templateSet group="perl">
  <template description="" name="#!" toReformat="true" toShortenFQNames="true" value="#!/usr/bin/env perl6">
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="." toReformat="true" toShortenFQNames="true" value="=&gt;">
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="sub" toReformat="true" toShortenFQNames="true" value="sub $1$($2$) {$3$}">
    <variable alwaysStopAt="true" defaultValue="&quot;function_name&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;Str $var&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="mul" toReformat="true" toShortenFQNames="true" value="multi $1$($2$) {$3$}">
    <variable alwaysStopAt="true" defaultValue="&quot;function_name&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;Str $var&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="if" toReformat="true" toShortenFQNames="true" value="if $1$ {$2$}">
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="ife" toReformat="true" toShortenFQNames="true" value="if $1$ {$2$}else {$3$}">
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="eif" toReformat="true" toShortenFQNames="true" value="elsif ${1) {$2$}">
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="xif" toReformat="true" toShortenFQNames="true" value="$1$ if $2$;">
    <variable alwaysStopAt="true" defaultValue="&quot;expression&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;condition&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="unless" toReformat="true" toShortenFQNames="true" value="unless $1$ {$2$}">
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="xunless" toReformat="true" toShortenFQNames="true" value="$1$ unless $2$;">
    <variable alwaysStopAt="true" defaultValue="&quot;expression&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;condition&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="tc" toReformat="true" toShortenFQNames="true" value="$1$ ?? $2$ !! $3$;">
    <variable alwaysStopAt="true" defaultValue="&quot;condition&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;value-if-true&quot;" expression="" name="2"/>
    <variable alwaysStopAt="true" defaultValue="&quot;value-if-false&quot;" expression="" name="3"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="switch" toReformat="true" toShortenFQNames="true" value="given $1$ {when $2$ {$3$}$4$default {$5$}}">
    <variable alwaysStopAt="true" defaultValue="&quot;$var&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;condition&quot;" expression="" name="2"/>
    <variable alwaysStopAt="true" defaultValue="&quot;# code block ...&quot;" expression="" name="3"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="loop" toReformat="true" toShortenFQNames="true" value="loop (my $1$ = 0; $$1 &lt; $2$; $$1++) {$3$}">
    <variable alwaysStopAt="true" defaultValue="&quot;$i&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;count&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="for" toReformat="true" toShortenFQNames="true" value="for $1$ -&gt; $2$ {$3$}">
    <variable alwaysStopAt="true" defaultValue="&quot;@array&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;$variable&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="wh" toReformat="true" toShortenFQNames="true" value="while $1$ {$2$}">
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="rp" toReformat="true" toShortenFQNames="true" value="repeat {$1$} $2$ $3$;">
    <variable alwaysStopAt="true" defaultValue="&quot;while|until&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="cl" toReformat="true" toShortenFQNames="true" value="$1$ class $2$ $3${$4$}">
    <variable alwaysStopAt="true" defaultValue="&quot;my&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;ClassName&quot;" expression="" name="2"/>
    <variable alwaysStopAt="true" defaultValue="&quot;is|does Parent|Role&quot;" expression="" name="3"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="has" toReformat="true" toShortenFQNames="true" value="has $1$ $2$;">
    <variable alwaysStopAt="true" defaultValue="&quot;Type&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;$!identifier&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="mth" toReformat="true" toShortenFQNames="true" value="method $1$($2$) {$3$}">
    <variable alwaysStopAt="true" defaultValue="&quot;method_name&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;$attr&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="pmth" toReformat="true" toShortenFQNames="true" value="method $1$$2$($3$) {$4$}">
    <variable alwaysStopAt="true" defaultValue="&quot;!&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;method_name&quot;" expression="" name="2"/>
    <variable alwaysStopAt="true" defaultValue="&quot;$attr&quot;" expression="" name="3"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="smth" toReformat="true" toShortenFQNames="true" value="submethod $1$($2$) {$3$}">
    <variable alwaysStopAt="true" defaultValue="&quot;submethod_name&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;$attr&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="test" toReformat="true" toShortenFQNames="true" value="use v6;use Test;$1$plan $2$;">
    <variable alwaysStopAt="true" defaultValue="&quot;use lib 'lib';&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;$num-tests&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="slurp" toReformat="true" toShortenFQNames="true" value="my $1$ = &quot;$2$&quot;.IO.slurp;">
    <variable alwaysStopAt="true" defaultValue="&quot;$var&quot;" expression="" name="1"/>
    <variable alwaysStopAt="true" defaultValue="&quot;filename&quot;" expression="" name="2"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
  <template description="" name="rfile" toReformat="true" toShortenFQNames="true" value="for &quot;$1$&quot;.IO.lines -&gt; $line {$2$}">
    <variable alwaysStopAt="true" defaultValue="&quot;filename&quot;" expression="" name="1"/>
    <context>
      <option name="PERL" value="true"/>
    </context>
  </template>
</templateSet>
